          <div class="top_views clearfix">
            <h2>이번 주 인기 세일 TOP 10</h2>

            <% @most_hit.each_with_index do |post, i| %>          
              <div class="top_view_box clearfix">
                  <div class="img_box">
                    <%= link_to image_tag(post.image, alt: post.title, title: post.title, :class => 'main_img'), post %>
                    <!-- <img src="<%= post.image %>" alt="<%= post.title %>"> -->
                    <span class="ranked_number"><%= i + 1 %></span>
                  </div>
                  <div class="top_view_inner comm_inner">
                    <p class="title"><%= post.title %></p>
                    <div class="pricing">
                      <!-- <p class="was_price"><%= number_to_currency(post.was_price, locale: :kr) %>원</p> -->
                      <p class="is_price">
                        <%= number_to_currency(post.is_price, locale: :kr) %>원
                        <span class="pct"><%= number_to_percentage(post.pct, precision: 0) %></span>
                      </p>
                    </div>
                    <!-- <p><%= render_with_hashtags(post.hashtag) %></p> -->
                    <div class="admin_panner">
                      <%= link_to 'Show', post %>
                      <%= link_to 'Edit', edit_post_path(post) %>
                      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                      views: <%= post.hits %>
                    </div>
                  </div>
              </div>
            <% end %>
            
          </div><!-- top_views -->

          <a class="weekly_top clearfix" href="/hubs/top_views">더 보기</a>

        
