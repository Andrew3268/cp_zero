                  <div class="banner_box">
                    <img src="<%= banner.b_image %>" alt="<%= banner.b_title %>">
                    <div class="inner">
                      <p class="title"><%= banner.b_title %></p>
                      <span>September 10th, 2022</span>
                      <div class="admin_panner">
                        <%= link_to 'Edit', edit_banner_path(banner) %>
                        <%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </div>
                  </div>
                </a>
              <% end %>
            </div>

            <div class="banner sub_banner">
              <% @except_first_banners.each do |banner| %>
                <a href="/posts/hashtag/<%= banner.b_categories %>">      
                  <div class="banner_box">
                    <div class="img_box">
                      <img src="<%= banner.b_image %>" alt="<%= banner.b_title %>">
                    </div>
                    <div class="inner_box">
                      <div class="inner">
                        <p class="title"><%= banner.b_title %></p>
                        <p class="title"><%= banner.b_sub_title %></p>
                      </div>
                      <span>By WACKY's Editor on<%= banner.created_at.strftime(" %Y-%m-%d") %></span>
                      <div class="admin_panner">
                        <%= link_to 'Edit', edit_banner_path(banner), :class => "admin_edit" %>
                        <%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </div>
                  </div>
                </a>
              <% end %>
            </div>
          </div>


