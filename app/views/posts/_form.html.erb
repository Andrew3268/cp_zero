
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :image %>
    <%= f.input :link %>
    <%= f.input :is_price %>
    <%= f.input :was_price %>
    <%= f.input :hashtags %>
    <%= f.input :ratings %>
    <%= f.input :reviews %>

    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
