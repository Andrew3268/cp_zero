<h1>Banners // <%= link_to 'New Banner', new_banner_path %></h1>

<table>
  <thead>
    <tr>
      <th>B title</th>
      <th>B body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.b_title %></td>
        <td><%= render_with_bhashtags(banner.b_hashtag) %></td>
        <td><%= link_to 'Show', banner %></td>
        <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
        <td><%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

